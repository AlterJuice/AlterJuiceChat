<resources>
    <style name="Theme.AlterJuiceChat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">#60b4f4</item>
        <item name="colorPrimaryVariant">#97e6ff</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorSecondary">#2196f3</item>
        <item name="colorSecondaryVariant">#6ec6ff</item>

        <item name="android:statusBarColor">#0069c0</item>
        <item name="android:navigationBarColor">#2196f3</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:colorBackground">@color/app_background</item>

    </style>
    <style name="MessageStyle">
        <item name="elevation">4dp</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:layout_marginHorizontal">5dp</item>
        <item name="android:background">@drawable/shape_rounded</item>
        <item name="android:backgroundTint">?colorPrimary</item>
        <item name="android:padding">10dp</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintWidth_percent">0.8</item>
        <item name="android:layout_width">0dp</item>
    </style>
    <style name="AppBarStyle">
        <item name="android:elevation">10dp</item>
        <item name="android:backgroundTint">?colorPrimary</item>
        <item name="android:background">@drawable/shape_empty</item>
        <item name="android:layout_height">@dimen/app_bar_size</item>
        <item name="android:padding">0dp</item>
    </style>
</resources>